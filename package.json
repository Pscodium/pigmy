{
  "name": "pigmy",
  "version": "1.0.4",
  "description": "A simple and expressive terminal color library for Node.js.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsup lib/index.ts --format cjs,esm --dts --out-dir dist",
    "build:tsc": "tsc --module ESNext --outDir dist --declaration --declarationDir dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "color",
    "terminal",
    "cli",
    "console",
    "pigmy",
    "ansi",
    "style",
    "text"
  ],
  "author": "Pscodium <peterson@pscodium.dev>",
  "license": "MIT",
  "files": ["dist"],
  "sideEffects": false,
  "devDependencies": {
    "tsup": "^6.7.0",
    "typescript": "^5.9.3"
  }
}
