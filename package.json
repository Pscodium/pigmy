{
  "name": "pigmy",
  "version": "1.0.8",
  "description": "A simple and expressive terminal color library for Node.js.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "engines": { "node": ">=14" },
  "scripts": {
    "build": "tsup lib/index.ts",
    "dev": "tsup lib/index.ts --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist",
    "lint": "eslint \"lib/**\" --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "color",
    "terminal",
    "cli",
    "console",
    "pigmy",
    "ansi",
    "style",
    "text"
  ],
  "author": "Pscodium <peterson@pscodium.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pscodium/pigmy.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "devDependencies": {
    "tsup": "^6.6.0",
    "typescript": "5.3.3",
    "vitest": "^1.3.0",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint-config-prettier": "^8.9.0",
    "prettier": "^2.8.8",
    "eslint-plugin-import": "^2.29.1"
  },
  "tsup": {
    "entry": ["lib/index.ts"],
    "format": ["cjs", "esm"],
    "dts": true,
    "sourcemap": true,
    "clean": true
  }
}
